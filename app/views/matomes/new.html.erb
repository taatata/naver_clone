<% if signed_in? %>
  <%= form_for(@matome) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <%= f.label :title %>
    <%= f.text_field :title, size: "50", placeholder: "まとめタイトルを入力 (50文字以内)" %>

    <%= f.label :content %>
    <%= f.text_area :content, placeholder: "*テキストを入力" %>

    <%= f.submit "作成", class: "btn btn-large btn-primary" %>
  <% end %>
<% end %>
